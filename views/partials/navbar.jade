nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
  //Brand and toggle get grouped for better mobile display
  div.navbar-header
    button.navbar-toggle(type="button", data-toggle="collapse" data-target="#tphq-main-nav-collapse")
      span.sr-only Toggle navigation
      span.icon-bar
      span.icon-bar
      span.icon-bar
    a.navbar-brand(href="/") travelplanHQ
    // Collect the nav links, forms, and other content for toggling

  div.collapse.navbar-collapse#tphq-main-nav-collapse
    ul.nav.navbar-nav
      li
        a(href="#", onclick="return false;", data-toggle="modal", data-keyboard="true", data-target="#alpha-explainer") Your plans
      li.plan-detail
        a(href="#", onclick="return false;", data-toggle="modal", data-keyboard="true", data-target="#alpha-explainer")
          span.glyphicon.glyphicon-plus-sign
          | &nbsp;Fork this plan
      li.plan-detail
        a(href="#", onclick="return false;", data-toggle="modal", data-keyboard="true", data-target="#alpha-explainer")
          span.glyphicon.glyphicon-pushpin
          | &nbsp;Favorite
      li.dropdown.plan-detail
        a.dropdown-toggle(href="#", data-toggle="dropdown") Share
        ul.dropdown-menu
          li
            a.share-facebook(href="#") Facebook
    ul.nav.navbar-nav.navbar-right
      if (req.isAuthenticated())
        li
          a(href="/users/"+req.user.id, title="Profile") Profile
        li
          a(href="/logout", title="logout") Logout
      else
        li
          a(href="/login", title="Login") Login

div.modal.fade#alpha-explainer(tabindex="-1")
  div.modal-dialog
    div.modal-content
      div.modal-header
        button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
        h4.modal-title Sorry, feature not yet available
      div.modal-body
        | TravelplanHQ is in an experimental stage. Some buttons you see are mainly there as placeholders for future functionality.
        | If you want to see the roadmap and plans for development, check out the project space at github: https://github.com/Teun/tphq
      div.modal-footer
        button.btn.btn-default(type="button", data-dismiss="modal") OK
